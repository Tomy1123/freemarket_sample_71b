.input-main
  .input-header
    = link_to image_tag("logo.png", :size => "185x50")
  .input-content
    .input-content-top
      会員情報入力
    .input-content-main
      = form_with model: @user, url: user_registration_path, class: 'new_user', local: true do |f|
        .contbox
          .contlist
            .form-group
              = f.label :ニックネーム
              %em (6 characters maximum) 
              %br/
              = f.text_field :nickname, autofocus: true, maxlength: "6"
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                  名前 (全角)
                  %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :first_name, placeholder: '例）目留',class: 'format-input-half',required: true
                  = profile.text_field :family_name, placeholder: '例) 仮子',class: 'format-input-half',required: true
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                  名前 (カナ)
                  %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :first_name_kana, placeholder: '例）メル',class: 'format-input-half',required: true
                  = profile.text_field :family_name_kana, placeholder: '例) カリコ',class: 'format-input-half',required: true
            .form-group
              = f.label :email 
              %br/ 
              = f.email_field :email
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                  生年
                %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :birth_year, placeholder: '例）2000年',class: 'format-input-half',required: true
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                月
                %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :birth_month, placeholder: '例）1月',class: 'format-input-half',required: true
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                日
                %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :birth_day, placeholder: '例）1日',class: 'format-input-half',required: true
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                郵便番号
                %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :postcode, placeholder: '例）〒○○○-○○○○',class: 'format-input-half',required: true
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                市町村
                %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :prefecture, placeholder: '例）〇〇県',class: 'format-input-half',required: true
                  = profile.text_field :city, placeholder: '例）〇〇市',class: 'format-input-half',required: true
            .form-group
              = f.fields_for :profile do |profile|
                %label.col-sm-2.control-label
                マンション名
                %span.label.label-danger 必須
                .col-sm-10 
                  = profile.text_field :adress1, placeholder: '例）〇〇番地',class: 'format-input-half',required: true
                  = profile.text_field :adress2, placeholder: '例）〇〇ハイム',class: 'format-input-half',required: true
            .form-group
              = f.label :password
              - if @validatable
                %em
                  (#{@minimum_password_length} characters minimum)
              %br/
              = f.password_field :password, autocomplete: "off"
            .form-group
              = f.label :password_confirmation
              %br/
              = f.password_field :password_confirmation, autocomplete: "off"
            .form-btn
              %input.button{title: "Sign in", type: "submit", value: "登録"}/
  .inputfooter
    = render 'items/registration-footer'
